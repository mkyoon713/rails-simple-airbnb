<div class="container">
  <h3><%= link_to 'Edit this flat', edit_flat_path %></h3>
  <div class="card">
    <h1><%= @flat.name %></h1>
    <p><%= @flat.address %></p>
  </div>
  <div class="card">
    <h2>A bit more about this flat...</h2>
    <p><%= @flat.description %></p>
  </div>
  <div class="card">
    <h2>Details</h2>
    <p><i class="fas fa-users"></i> <%= @flat.number_of_guests %></p>
    <p><i class="fas fa-dollar-sign"></i> <%= @flat.price_per_night %></p>
  </div>
</div>
