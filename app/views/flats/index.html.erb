<div class="container">
  <h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
      <div class="cards">
        <% @flats.each do |flat| %>
          <div class="col-xs-12 col-md-4">
            <div class="card">
              <h2><%= flat.name %></h2>
              <p><%= flat.address %></p>
              <p><i class="fas fa-users"></i> <%= flat.number_of_guests %></p>
              <p><i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %></p>
              <p><%= link_to 'More info', flat_path(flat) %> | <%= link_to 'Edit', edit_flat_path(flat) %> | <%= link_to 'Remove', flat_path(flat),
              method: 'delete' %></p>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
